# Verzeichnis zum Erstellen erstellen (Verzeichnisname beliebig, als Beispiel ~/build/turag-console)
mkdir -p ~/build/turag-console
cd ~/build/turag-console

# Tarball aus Quellen erzeugen
PATH/TO/TURAG/PROGRAMMIERUNG/tools/TURAG-Console/Console/make_dist.sh

# Tarball umbenennen (<package>-<version>.tar.gz -> <package>_<version>.orig.tar.gz)
mv turag-console-0.1~git*.tar.gz turag-console_0.1~git*.orig.tar.gz

# Quellen entpacken
tar zxf turag-console_*
cd turag-console-*

# letzte Packetinformationen kopieren
cp PATH/TO/TURAG/PROGRAMMIERUNG/tools/TURAG-Console/debian .

# Changelog-Eintrag erstellen (~UBUNTU-NAME an Version anhängen!)
dch -d -r

# Paketinformation wieder in git-Repository zurückkopieren
cp debian PATH/TO/TURAG/PROGRAMMIERUNG/tools/TURAG-Console/

# Binary-Paket erstellen für aktuelle Plattform (optional, zum Testen ob Paket kompiliert)
debuild -us -uc

# Quellpaket erstellen
debuild -sa -S

# Quellpaket in PPA hochladen
dput ppa:r1tschy/turag ../turag-console*.changes 
